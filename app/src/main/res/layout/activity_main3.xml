<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/RLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/lbl_judul"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Penggunaan Relative Layout"/>
    <TextView
        android:id="@+id/lbl_komen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Komentar"
        android:layout_below="@id/lbl_judul"
        android:layout_alignLeft="@id/lbl_judul">

    </TextView>

    <EditText
        android:id="@+id/txtKomen"
        android:layout_width="fill_parent"
        android:layout_height="170px"
        android:textSize="18sp"
        android:layout_alignLeft="@id/lbl_komen"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtKomen"
        android:layout_alignRight="@+id/txtKomen"
        android:text="Simpan" />
    
    <Button
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="Batal"
        android:layout_below="@+id/txtKomen"
        android:layout_alignLeft="@+id/txtKomen">

    </Button>
</RelativeLayout>
